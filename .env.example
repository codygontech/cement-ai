# JK Cement AI Optimization System - Environment Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file with actual credentials to version control

# ============================================================
# Google Cloud Configuration
# ============================================================
GOOGLE_CLOUD_PROJECT=your-project-id
GOOGLE_API_KEY=your-google-api-key-here

# ============================================================
# Vertex AI Configuration
# ============================================================
VERTEX_AI_LOCATION=asia-south1
VERTEX_AI_MODEL=gemini-2.0-flash-exp

# ============================================================
# Database Configuration
# ============================================================
# Choose ONE of the two connection methods:

# Option 1: Cloud SQL Proxy (recommended for local development)
# Set USE_CLOUD_SQL_PROXY=true and configure DATABASE_URL
USE_CLOUD_SQL_PROXY=true
DATABASE_URL=postgresql+asyncpg://your-user:your-password@localhost:5432/cement_plant

# Option 2: Direct Cloud SQL Connection (for production/Cloud Run)
# Set USE_CLOUD_SQL_PROXY=false and configure JDBC_DB_STRING
# USE_CLOUD_SQL_PROXY=false
# JDBC_DB_STRING=jdbc:postgresql:///cement_plant?cloudSqlInstance=project:region:instance
# DATABASE_USER=your-db-user
# DATABASE_PASSWORD=your-db-password
# DATABASE_NAME=cement_plant

# ============================================================
# Cloud Storage
# ============================================================
GCS_IMAGES_BUCKET=your-images-bucket-name

# ============================================================
# API Configuration
# ============================================================
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=true
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# ============================================================
# Logging
# ============================================================
ENABLE_CLOUD_LOGGING=false
LOG_LEVEL=INFO

